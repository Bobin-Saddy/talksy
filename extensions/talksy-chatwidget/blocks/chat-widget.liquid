{%- assign primary_color = section.settings.primary_color | default: '#6366f1' -%}

<div id="chat-launcher" aria-label="Open Chat" style="background: {{ primary_color }};">
  <div id="launcher-icon">
    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path></svg>
  </div>
  <div id="close-launcher-icon" style="display:none;">
    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
  </div>
</div>

<div id="chat-widget" class="chat-hidden">
  <div id="chat-header">
    <div class="header-content">
      <div id="header-avatar-container" class="avatar-stack">
        <img id="main-support-avatar" src="https://ui-avatars.com/api/?name=Support&background=fff&color={{ primary_color | remove: '#' }}" alt="Support">
        <div class="online-indicator"></div>
      </div>
      <div class="header-text">
        <span id="header-subtitle-text" class="header-subtitle">Online</span>
      </div>
    </div>
    <button id="chat-close" title="Minimize">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M6 9l6 6 6-6"/></svg>
    </button>
  </div>

  <div id="tab-home" class="tab-content">
    <div class="home-hero" id="home-hero-bg"> 
      <div class="hero-avatars">
        <img src="https://ui-avatars.com/api/?name=J&background=ddd" class="overlap">
        <img src="https://ui-avatars.com/api/?name=S&background=eee" class="overlap">
        <img src="https://ui-avatars.com/api/?name=M&background=fff" class="overlap">
      </div>
      <h1 id="welcome-h1">Hi there ðŸ‘‹</h1>
      <p id="welcome-p">We are here to help you! Ask us anything.</p>
    </div>
    
    <div class="home-card" id="start-chat-trigger">
      <div class="card-text">
        <strong id="card-msg-text">Send us a message</strong>
        <span id="card-reply-time">Typically replies in 5 minutes</span>
      </div>
      <div class="card-arrow" id="card-arrow-icon">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
      </div>
    </div>
  </div>

  <div id="tab-chat" class="tab-content" style="display:none;">
    <div id="chat-onboarding-step" class="step-container">
      <div class="welcome-card">
        <h3 id="onboarding-title">Start a conversation</h3>
        <p id="onboarding-p">Please provide your details to begin.</p>
        <div class="input-group">
          <input id="chat-fname" type="text" placeholder="First Name" />
          <input id="chat-email" type="email" placeholder="Email Address" />
          <button id="chat-submit-info">Continue to Chat</button>
        </div>
      </div>
    </div>

    <div id="chat-chat-step" class="step-container" style="display:none;">
      <div id="chat-messages"></div>
      
      <div id="chat-footer">
        <div id="attachment-preview" class="hidden-preview">
          <span id="file-name-display"></span>
          <button id="remove-file">Ã—</button>
        </div>

        <div id="emoji-picker" class="hidden-picker"></div>
        
        <div class="modern-input-container">
          <button id="emoji-btn" class="input-tool">ðŸ˜Š</button>
          <button id="file-btn" class="input-tool">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21.44 11.05l-9.19 9.19a6 6 0 0 1-8.49-8.49l9.19-9.19a4 4 0 0 1 5.66 5.66l-9.2 9.19a2 2 0 0 1-2.83-2.83l8.49-8.48"></path></svg>
          </button>
          <input id="chat-file-input" type="file" style="display:none;" accept="image/*, .pdf, .svg" />
          <input id="chat-input" placeholder="Type your message..." autocomplete="off" />
          <button id="chat-send">
             <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2.5"><path d="M22 2L11 13M22 2l-7 20-4-9-9-4 20-7z"/></svg>
          </button>
        </div>
      </div>
    </div>
  </div>

  <div id="chat-nav">
    <div class="nav-item active" data-tab="home">
      <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path></svg>
      <span>Home</span>
    </div>
    <div class="nav-item" data-tab="chat">
      <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path></svg>
      <span>Messages</span>
    </div>
  </div>
</div>

<style>
:root { 
  --chat-primary: {{ primary_color }}; 
  --chat-font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  --chat-base-size: 15px; 
}

#chat-widget * { box-sizing: border-box; font-family: var(--chat-font-family) !important; }

/* LAUNCHER */
#chat-launcher { position: fixed; bottom: 25px; right: 25px; width: 60px; height: 60px; border-radius: 50%; color: #fff; display: flex; align-items: center; justify-content: center; cursor: pointer; z-index: 999999; box-shadow: 0 8px 25px rgba(0,0,0,0.2); transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275); }
#chat-launcher:hover { transform: scale(1.1); }

/* WIDGET BASE */
#chat-widget { position: fixed; bottom: 100px; right: 25px; width: 370px; height: 600px; max-height: calc(100vh - 130px); background: #ffffff; border-radius: 24px; display: flex; flex-direction: column; overflow: hidden; box-shadow: 0 12px 40px rgba(0,0,0,0.15); z-index: 999998; transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1); border: 1px solid rgba(0,0,0,0.05); font-size: var(--chat-base-size); }
.chat-hidden { opacity: 0; transform: translateY(20px) scale(0.95); pointer-events: none; }
.chat-visible { opacity: 1; transform: translateY(0) scale(1); pointer-events: all; }

/* HEADER & GREEN DOT */
#chat-header { padding: 16px 20px; color: #fff; display: flex; justify-content: space-between; align-items: center; background: var(--chat-primary); flex-shrink: 0; }
.header-content { display: flex; align-items: center; gap: 12px; }
.avatar-stack { position: relative; width: 38px; height: 38px; }
.avatar-stack img { width: 100%; height: 100%; border-radius: 50%; object-fit: cover; border: 2px solid rgba(255,255,255,0.3); }
.online-indicator { position: absolute; bottom: 1px; right: 1px; width: 10px; height: 10px; background: #22c55e; border: 2px solid #fff; border-radius: 50%; box-shadow: 0 0 8px #22c55e; }
.header-subtitle { font-size: 0.85em; font-weight: 500; opacity: 1; letter-spacing: 0.3px; }

/* MODERN FOOTER & INPUT */
#chat-footer { padding: 12px 16px; background: #fff; border-top: 1px solid #f1f5f9; position: relative; }
.modern-input-container { display: flex; align-items: center; background: #f8fafc; border: 1.5px solid #e2e8f0; border-radius: 24px; padding: 4px 6px; transition: border-color 0.2s, box-shadow 0.2s; }
.modern-input-container:focus-within { border-color: var(--chat-primary); background: #fff; box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1); }

#chat-input { flex: 1; border: none; background: transparent; outline: none; padding: 10px 12px; font-size: 0.95em; color: #1e293b; }
.input-tool { background: none; border: none; cursor: pointer; padding: 8px; color: #64748b; border-radius: 50%; transition: background 0.2s; display: flex; align-items: center; }
.input-tool:hover { background: #f1f5f9; color: var(--chat-primary); }

#chat-send { background: var(--chat-primary); border: none; border-radius: 50%; width: 36px; height: 36px; cursor: pointer; display: flex; align-items: center; justify-content: center; transition: transform 0.2s; flex-shrink: 0; margin-left: 4px; }
#chat-send:hover { transform: scale(1.05); filter: brightness(1.1); }

/* ATTACHMENT PREVIEW */
#attachment-preview { background: #f1f5f9; padding: 6px 12px; border-radius: 8px; margin-bottom: 8px; display: flex; align-items: center; justify-content: space-between; font-size: 12px; border: 1px dashed var(--chat-primary); }
.hidden-preview { display: none !important; }
#remove-file { background: none; border: none; color: #ef4444; cursor: pointer; font-size: 16px; font-weight: bold; }

/* CHAT AREA */
#chat-messages { flex: 1; overflow-y: auto; padding: 15px; background: #fdfdfd; display: flex; flex-direction: column; gap: 12px; }
.msg-content { padding: 10px 14px; border-radius: 18px; font-size: 0.95em; line-height: 1.4; }
.user .msg-content { background: var(--chat-primary); color: #fff; border-bottom-right-radius: 4px; }
.bot .msg-content { background: #f1f5f9; color: #1e293b; border-bottom-left-radius: 4px; }

/* Rest of your styles (Hero, Nav, etc.) remain high quality */
.tab-content { flex: 1; display: flex; flex-direction: column; overflow: hidden; position: relative; }
.home-hero { padding: 30px 20px 60px; background: var(--chat-primary); color: #fff; }
.hero-avatars { display: flex; margin-bottom: 15px; }
.hero-avatars img { width: 32px; height: 32px; border-radius: 50%; border: 2px solid var(--chat-primary); margin-right: -10px; }
.home-card { background: white; margin: -30px 15px 15px; padding: 18px; border-radius: 16px; display: flex; align-items: center; justify-content: space-between; box-shadow: 0 10px 25px rgba(0,0,0,0.06); cursor: pointer; border: 1px solid #f0f0f0; }
#chat-nav { display: flex; border-top: 1px solid #f1f5f9; background: #fff; padding: 5px 0; }
.nav-item { flex: 1; display: flex; flex-direction: column; align-items: center; padding: 8px; cursor: pointer; font-size: 10px; color: #94a3b8; }
.nav-item.active { color: var(--chat-primary); font-weight: 600; }
#emoji-picker { position: absolute; bottom: 80px; left: 16px; right: 16px; background: #fff; border: 1px solid #e2e8f0; border-radius: 12px; padding: 10px; display: grid; grid-template-columns: repeat(5, 1fr); gap: 5px; z-index: 10; box-shadow: 0 -5px 15px rgba(0,0,0,0.08); }
.hidden-picker { display: none !important; }
</style>

<script>
(() => {
  const shop = "{{ shop.permanent_domain }}";
  const BASE_URL = "https://talksy-production-322d.up.railway.app"; 

  const widget = document.getElementById("chat-widget");
  const launcher = document.getElementById("chat-launcher");
  const chatInput = document.getElementById("chat-input");
  const msgBox = document.getElementById("chat-messages");
  const fileInput = document.getElementById("chat-file-input");
  const attachmentPreview = document.getElementById("attachment-preview");
  const fileNameDisplay = document.getElementById("file-name-display");
  const removeFileBtn = document.getElementById("remove-file");

  let pendingFile = null;

  // Sync Settings (Your existing function)
  async function fetchAndApplySettings() {
    try {
      const response = await fetch(`${BASE_URL}/api/chat-settings?shop=${shop}`);
      if (!response.ok) return;
      const s = await response.json();
      if (s) {
        document.documentElement.style.setProperty('--chat-primary', s.primaryColor);
        launcher.style.background = s.primaryColor;
        document.getElementById("chat-header").style.background = s.headerBgColor || s.primaryColor;
        document.getElementById("home-hero-bg").style.background = s.heroBgColor || s.primaryColor;
        if(s.welcomeImg) document.getElementById("main-support-avatar").src = s.welcomeImg;
      }
    } catch (e) { console.error("Sync failed", e); }
  }

  // Handle File Selection
  fileInput.onchange = (e) => {
    const file = e.target.files[0];
    if (file) {
      const reader = new FileReader();
      reader.onload = (ev) => {
        pendingFile = ev.target.result;
        fileNameDisplay.innerText = "ðŸ“Ž " + file.name;
        attachmentPreview.classList.remove("hidden-preview");
      };
      reader.readAsDataURL(file);
    }
  };

  // Remove pending file
  removeFileBtn.onclick = () => {
    pendingFile = null;
    fileInput.value = "";
    attachmentPreview.classList.add("hidden-preview");
  };

  async function handleSend() {
    const text = chatInput.value.trim();
    const sId = localStorage.getItem("chat_session");
    const email = localStorage.getItem("chat_user_email");

    if (!sId || (!text && !pendingFile)) return;

    // UI Update
    addMessageToUI({ sender: 'user', message: text || (pendingFile ? "Sent an attachment" : ""), fileUrl: pendingFile });
    
    // Clear Input and Preview
    const currentText = text;
    const currentFile = pendingFile;
    chatInput.value = "";
    pendingFile = null;
    attachmentPreview.classList.add("hidden-preview");
    fileInput.value = "";

    try {
      await fetch(`${BASE_URL}/app/chat/message`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ sessionId: sId, message: currentText || "Sent an attachment", shop, email, fileUrl: currentFile })
      });
    } catch (e) {}
  }

  // Controls
  document.getElementById("chat-send").onclick = handleSend;
  chatInput.onkeydown = (e) => { if (e.key === "Enter") handleSend(); };
  document.getElementById("file-btn").onclick = () => fileInput.click();
  
  // Launcher & Tabs
  launcher.addEventListener('click', () => {
    const isVisible = widget.classList.contains("chat-visible");
    widget.classList.toggle("chat-visible", !isVisible);
    widget.classList.toggle("chat-hidden", isVisible);
    document.getElementById("launcher-icon").style.display = isVisible ? "block" : "none";
    document.getElementById("close-launcher-icon").style.display = isVisible ? "none" : "block";
  });

  document.querySelectorAll('.nav-item').forEach(item => {
    item.addEventListener('click', () => {
      document.querySelectorAll('.tab-content').forEach(t => t.style.display = 'none');
      document.querySelectorAll('.nav-item').forEach(n => n.classList.remove('active'));
      document.getElementById(`tab-${item.dataset.tab}`).style.display = 'flex';
      item.classList.add('active');
    });
  });

  document.getElementById('start-chat-trigger').addEventListener('click', () => {
    document.querySelector('[data-tab="chat"]').click();
  });

  const addMessageToUI = (m) => {
    const div = document.createElement("div");
    div.className = `msg ${m.sender}`;
    let contentHtml = `<div class="msg-content">${m.message}`;
    if(m.fileUrl) {
      const isImg = m.fileUrl.startsWith('data:image') || m.fileUrl.match(/\.(jpeg|jpg|gif|png|svg)$/i);
      contentHtml += isImg 
        ? `<br><img src="${m.fileUrl}" style="max-width:100%; border-radius:8px; margin-top:8px;" />`
        : `<br><a href="${m.fileUrl}" target="_blank" style="color:inherit; text-decoration:underline;">ðŸ“Ž Attachment</a>`;
    }
    contentHtml += `</div>`;
    div.innerHTML = contentHtml;
    msgBox.appendChild(div);
    msgBox.scrollTop = msgBox.scrollHeight;
  };

  // Onboarding
  document.getElementById("chat-submit-info").onclick = async () => {
    const fname = document.getElementById("chat-fname").value.trim();
    const email = document.getElementById("chat-email").value.trim();
    if(!fname || !email) return alert("Please fill details");
    const sessionId = "sess_" + Date.now();
    try {
      const res = await fetch(`${BASE_URL}/app/chat/register`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ shop, fname, email, sessionId })
      });
      if (res.ok) {
        localStorage.setItem("chat_session", sessionId);
        localStorage.setItem("chat_user_email", email);
        document.getElementById("chat-onboarding-step").style.display = "none";
        document.getElementById("chat-chat-step").style.display = "flex";
      }
    } catch (e) {}
  };

  // Emoji Picker
  const picker = document.getElementById("emoji-picker");
  const emojis = ["ðŸ˜Š","ðŸ‘‹","ðŸ™Œ","ðŸ”¥","âœ…","ðŸ¤”","ðŸ’¡","ðŸš€","â¤ï¸","âœ¨"];
  picker.innerHTML = emojis.map(e => `<span style="cursor:pointer; padding:5px; text-align:center;">${e}</span>`).join("");
  document.getElementById("emoji-btn").onclick = () => picker.classList.toggle("hidden-picker");
  picker.onclick = (e) => {
    if(e.target.tagName === 'SPAN') {
      chatInput.value += e.target.innerText;
      picker.classList.add("hidden-picker");
      chatInput.focus();
    }
  };

  fetchAndApplySettings();
  if (localStorage.getItem("chat_session")) {
    document.getElementById("chat-onboarding-step").style.display = "none";
    document.getElementById("chat-chat-step").style.display = "flex";
  }
})();
</script>

